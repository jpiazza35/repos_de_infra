# ---- API Configs ----
# This only affects the Vite proxy configuration running in local dev environment. It does not affect the deployed application.
USER_API_BASE="http://mpt-user-api-service"
PROJECT_API_BASE="http://mpt-project-service"
SURVEY_API_BASE="http://mpt-survey-service"
INCUMBENT_API_BASE="http://mpt-incumbent-service"

# API Ports
USER_API_PORT=80
PROJECT_API_PORT=80
SURVEY_API_PORT=80
INCUMBENT_API_PORT=80

# API Base Paths
VITE_USER_API_BASE_URL="${USER_API_BASE}:${USER_API_PORT}"
VITE_PROJECT_API_BASE_URL="${PROJECT_API_BASE}:${PROJECT_API_PORT}"
VITE_SURVEY_API_BASE_URL="${SURVEY_API_BASE}:${SURVEY_API_PORT}"
VITE_INCUMBENT_API_BASE_URL="${INCUMBENT_API_BASE}:${INCUMBENT_API_PORT}"

# ---- B2C Config ---- 
# Real B2C Environment
VITE_AB2C_HOSTNAME="auth.cliniciannexus.com"
VITE_AB2C_TENANT_ID="{{ vite_ab2c_tenant_id }}"
VITE_AB2C_REDIRECT_URI="{{ vite_ab2c_redirect_uri }}"
VITE_AB2C_CLIENT_ID="{{ vite_ab2c_client_id }}"
VITE_AB2C_SIGNUP_SIGNIN="B2C_1A_CN_HRD_SIGNIN"
# VITE_AB2C_EDIT_PROFILE="" This is not implemented right now
# Use comma separated values for scopes
VITE_AB2C_SCOPES="https://api.cliniciannexus.com/cn-generic-api/api.access"
# link to Client Portal
VITE_CLIENT_PORTAL_LINK="https://clientportal.sullivancotter.com/signin"

VITE_AUTH0_DOMAIN="cliniciannexus.us.auth0.com"
VITE_AUTH0_CLIENT_ID="{{ vite_auth0_client_id }}"
VITE_AUTH0_CALLBACK="callback"
VITE_AUTH0_AUDIENCE="https://mpt.cliniciannexus.com"

# VITE_AUTH_TYPE="OKTA"
VITE_AUTH_TYPE="OKTA"

# AM5 License Key
VITE_AM5_LICENSE_KEY="{{ vite_am5_license_key }}"
VITE_LAUNCH_DARKLY="{{ vite_launch_darkly }}"
VITE_HEADER_STRICT_TRA_SEC="max-age=31536000; includeSubDomains"
VITE_HEADER_X_CONTENT_OPTIONS="nosniff"
VITE_HEADER_X_FRAME_CONTENT_OPTIONS="DENY"
VITE_HEADER_CONTENT_SEC_POLICY="default-src 'self'"

# VITE_BUILD_NUMBER="{{ vite_build_number }}"
VITE_API_URL="{{ vite_api_url }}"
VITE_API_URL_PREFIX="{{ vite_api_url_prefix }}"